import { Wrapper } from '../Wrapper';

const platform = 'github';
const username = 'withastro';
---

<footer>
  <Wrapper>
    <p>Suivez-nous sur <a href={`https://www.${platform}.com/${username}`}>{platform}</a> !</p>
    <p>lien vers pages légales - credits - protection données</p>
