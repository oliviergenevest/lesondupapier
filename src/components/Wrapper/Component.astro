---
import type { HTMLTag, Polymorphic } from 'astro/types';

type Props<T extends HTMLTag = 'div'> = Polymorphic<{
  as: T;
}>;

const { as: Tag = 'div' as any, ...props } = Astro.props;
//console.log("wrapper component props", props.class);
---

<Tag {...props} class:list={['wrapper', props.class]}>
  <slot />
</Tag>

<style>
  .wrapper {
    width: 100%;
    padding-left: var(--page-margin);
    padding-right: var(--page-margin);
    max-width: var(--page-width-with-margin);
    margin-left: auto;
    margin-right: auto;

    .wrapper {
      padding: 0;
    }
  }

  .wrapper.wide {
    max-width: 1280px;
  }

  .wrapper.homepage {
    display:flex;
    flex-direction: column;
    gap:rfs(32px);
  }
</style>
