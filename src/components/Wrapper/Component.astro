---
import type { HTMLTag, Polymorphic } from 'astro/types';

type Props<T extends HTMLTag = 'div'> = Polymorphic<{
  as: T;
}>;

const { as: Tag = 'div' as any, ...props } = Astro.props;
---

<Tag {...props} class="wrapper">
  <slot />
</Tag>



<style>
.wrapper {
    width: 100%;
    padding-left: var(--page-margin);
    padding-right: var(--page-margin);
     max-width: var(--page-width-with-margin);
    margin-left: auto;
    margin-right: auto;
    
    .wrapper {
      padding:0;
    }
}

</style>

